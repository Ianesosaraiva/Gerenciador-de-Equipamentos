@model IEnumerable<GerenciadorDeEquipamentos.Models.Especificacoes>

@{
    ViewBag.Title = "ListarEspecificacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4 class="card-title">Lista de Especificações</h4>
                                <p></p>
                            </div>
                            <div class="col-sm">
                                <a href="@Url.Action("CriarEspecificacoes")">
                                    <span>Criar Especificação</span>
                                    <i class="material-icons" style="padding-top: 12px;" title="Criar Especificação">add</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="text-primary">
                                <th>
                                    @Html.DisplayName("Nome da Especificação")
                                </th>
                                <th>
                                    @Html.DisplayName("Atributo")
                                </th>
                                <th>Ações</th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Atributos.Nome)
                                            </td>

                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="#">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarEspecificacoes", "Especificacao", new { EspecificacaoId = item.EspecificacaoId})">Editar</a>
                                                            <a class="dropdown-item" href="@Url.Action("ExcluirEspecificacoes", "Especificacao")">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

