                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="@Url.Action("ListarTipoEquipamentos","TipoEquipamento")" style="color:azure">
                            <div class="card-header card-header-primary card-header-icon">

                                <div class="card-icon">
                                    <i class="material-icons">devices</i>
                                </div>
                                <p class="card-category">Website Visits</p>
                                <h3 class="card-title">Tipos de Equipamentos</h3>
                            </div>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons">assignment</i> Computador, impressora, etc...
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="@Url.Action("ListarSoftwares","Software")" style="color:azure">
                            <div class="card-header card-header-primary card-header-icon">

                                <div class="card-icon">
                                    <i class="material-icons">shop</i>
                                </div>
                                <p class="card-category">Website Visits</p>
                                <h3 class="card-title">Softwares e Licenças</h3>
                            </div>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons">assignment</i> Softwares e licenças
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChartLine);

   // google.load("visualization", "1", { packages: ["corechart"] });

    var chartDataLine;

    $(document).ready(function () {

        $.ajax({
            url: "GetLineChartData",
            data: "",
            dataType: "json",
            type: "POST",
            contentType: "application/json; chartset=utf-8",
            success: function (data) {
                console.log(data);
                chartDataLine = data;
            },
            error: function (data) {
                console.log(data);
                alert("Erro carregando dados! Por favor tente novamente.")
            }
        }).done(function () {
            drawChartLine();
        });
    });


    function drawChartLine() {

        var data = new google.visualization.arrayToDataTable(chartDataLine);

        var options = {
            //chartArea: {
            //    width: 200
            //},
            hAxis: {
                title: 'Meses'
            },
            vAxis: {
                title: 'Quantidade'
            },
            title: "",
            pointSize: 5
        };

        //var lineChart = new google.charts.Line(document.getElementById('lineChart'));
        var lineChart = new google.visualization.LineChart(document.getElementById('lineChart'));

        lineChart.draw(data, options);
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
