@model GerenciadorDeEquipamentos.Models.Pessoas

@{
    ViewBag.Title = "Detalhes Colaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0"> Detalhes Colaborador</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <dl class="table table-hover">
                                <dt>
                                    @Html.DisplayName("Nome")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NomeCompleto)
                                </dd>

                                <dt>
                                    @Html.DisplayName("E-mail")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Email)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Data de Nascimento")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DataNascimento)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.CPF)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CPF)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.RG)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.RG)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Contato)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Contato)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Data de Cadastro")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DataCadastro)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Último Acesso")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.UltimoAcesso)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Nível de Acesso")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Acessos.Descricao)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Status")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Status.Descricao)
                                </dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("ListarColaboradores", "Colaborador")" class="btn btn-primary">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>