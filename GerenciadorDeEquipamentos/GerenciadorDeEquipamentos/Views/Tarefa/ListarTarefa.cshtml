@model IEnumerable<GerenciadorDeEquipamentos.Models.Tarefa>

@{
    ViewBag.Title = "ListarTarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary ">
                            <h4 class="card-title">Lista de Tarefas</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="">
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Ordem de Serviço")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Tipo de Solicitação")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Prioridade")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Data de Abertura")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Data da Encerramento")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Descrição")
                                            </th>

                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OrdemServico)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TipoSolicitacao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Prioridade)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DataAbertura)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DataEncerramento)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                </td>
                                               
                                                <td>
                                                    <ul class="navbar-nav">
                                                        <li class="nav-item dropdown">
                                                            <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                <i class="material-icons">more_vert</i>
                                                                <p class="d-lg-none d-md-block">
                                                                    Mais Ações
                                                                </p>
                                                            </a>
                                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                                <a class="dropdown-item" href="#">Visualizar Mais</a>
                                                                <a class="dropdown-item" href="@Url.Action("EditarTarefas", "Tarefa", new { TarefaId = item.TarefaId})">Editar</a>
                                                                <a class="dropdown-item" href="@Url.Action("ExcluirTarefas", "Tarefa", new { TarefatoId = item.TarefaId})">Excluir</a>
                                                            </div>
                                                        </li>
                                                    </ul>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

