@model IEnumerable<GerenciadorDeEquipamentos.Models.Equipamentos>

@{
    ViewBag.Title = "Listar Equipamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<p>
        @Html.ActionLink("Cadastrar Equipamento", "CriarEquipamentos")
    </p>*@
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary ">
                        <h4 class="card-title">Lista de Equipamentos</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables" class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Tipo de equipamento")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Departamentos")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data de aquisição")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data da garantia")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Número patrimonial")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Service Tag Serial")
                                        </th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoEquipamento.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status.Descricao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Departamentos.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataAquisicao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataGarantia)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroPatrimonial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ServiceTagSerial)
                                            </td>
                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="@Url.Action("DetalhesEquipamento", "Equipamento", new { EquipamentoId = item.EquipamentoId})">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("ListarEquipamentoEspecificacao", "Equipamento", new { EquipamentoId = item.EquipamentoId})">Especificações</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarEquipamento", "Equipamento", new { EquipamentoId = item.EquipamentoId})">Editar Equipamento</a>
                                                            <a class="dropdown-item" href="@Url.Action("ListarManutencoesEquipamento", "Manutencao", new { EquipamentoId = item.EquipamentoId})">Manutenção</a>
                                                            <a class="dropdown-item" href="@Url.Action("DeletarEquipamento", "Equipamento", new { EquipamentoId = item.EquipamentoId})">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

