@model GerenciadorDeEquipamentos.Models.TipoEquipamento

@{
    ViewBag.Title = "EditarTipoEquipamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <div class="row">
                                <div class="col-sm-10">
                                    <h4 class="card-title">Editar Tipo de Equipamento</h4>
                                    <p class="card-category">Preencha os campos corretamente!</p>
                                </div>
                                <div class="col-sm">
                                    <a>
                                        <i class="material-icons" style="padding-top: 12px;" title="Listar Tipo de Equipamentos">list</i>
                                    </a>
                                    <a>
                                        <i class="material-icons" style="padding-top: 12px;">person</i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row mt-3">
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Tipo de Equipamento</label>
                                        @Html.DropDownList("TipoEquipamentoId", ViewBag.tipoEquipamento as IEnumerable<SelectListItem>, "Selecione", htmlAttributes: new { @class = "custom-select form-control" })
                                        @Html.ValidationMessageFor(model => model.TipoEquipamentoId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm">
                                       
                                    </div>
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Status</label>
                                       
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Data da Aquisição</label>
                                       

                                    </div>
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Data da Garantia</label>
                                       
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Número Patrimonial</label>
                                       
                                    </div>
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Service TagSerial</label>
                                       
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Descrição</label>
                                        <textarea class="form-control" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm">
                                        <label class="bmd-label-static">Observação</label>
                                     
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a href="@Url.Action("ListarEquipamentos", "Equipamento")" class="btn btn-primary">Voltar</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

