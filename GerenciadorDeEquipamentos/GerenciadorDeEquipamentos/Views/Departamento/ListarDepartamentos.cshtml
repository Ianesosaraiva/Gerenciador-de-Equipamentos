@model IEnumerable<GerenciadorDeEquipamentos.Models.Departamentos>

@{
    ViewBag.Title = "Listar Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-sm-9">
                                <h4 class="card-title mt-0"> Lista de Departamentos</h4>
                            </div>
                            <div class="col-sm">
                                <a class="btn" style="background-color: white" href="@Url.Action("CriarDepartamento")">
                                    <span style="color: #042956">Criar Departamento</span>
                                    <i class="material-icons" style="color: #042956" title="Criar Departamento">add</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables" class="table table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Nome do Departamento")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Descrição")
                                        </th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descricao)
                                            </td>

                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="@Url.Action("DetalhesDepartamento", "Departamento", new { DepartamentoId = item.DepartamentoId})">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarDepartamento", "Departamento", new { DepartamentoId = item.DepartamentoId})">Editar</a>
                                                            <a class="dropdown-item" href="@Url.Action("DeletarDepartamento", "Departamento", new { DepartamentoId = item.DepartamentoId})">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

