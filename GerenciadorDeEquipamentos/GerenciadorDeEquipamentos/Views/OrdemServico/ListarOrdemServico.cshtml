@model IEnumerable<GerenciadorDeEquipamentos.Models.OrdemServico>

@{
    ViewBag.Title = "Lista de Ordens Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-sm-9">
                                <h4 class="card-title">Listar Ordens de Serviço</h4>
                                <p></p>
                            </div>
                            <div class="col-sm">
                                <a class="btn" style="background-color: white" href="@Url.Action("CriarOrdemServico")">
                                    <span style="color: #042956">Criar Ordem Serviço</span>
                                    <i class="material-icons" style="color: #042956" title="Criar Ordem Serviço">add</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Título")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Nome do Cliente")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data de Abertura")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data de Encerramento")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Equipe")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Titulo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClienteNome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataAbertura)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataEncerramento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Equipe.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status.Descricao)
                                            </td>
                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="#">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarOrdemServico", "OrdemServico", new { OrdemServicoId = item.OrdemServicoId})">Editar</a>
                                                            @if (!HttpContext.Current.User.IsInRole("Estagiário"))
                                                            {
                                                                <a class="dropdown-item" href="@Url.Action("ExcluirOrdemServico", "OrdemServico", new { OrdemServicoId = item.OrdemServicoId })">Excluir</a>
                                                            }
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

