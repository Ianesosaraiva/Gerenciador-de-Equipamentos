@model IEnumerable<GerenciadorDeEquipamentos.Models.Tarefa>

@{
    ViewBag.Title = "Listar Tarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4 class="card-title">Listar Tarefas</h4>
                                <p></p>
                            </div>
                            <div class="col-sm">
                                <a href="@Url.Action("CriarTarefa")">
                                    <span>Criar Tarefa</span>
                                    <i class="material-icons" style="padding-top: 12px;" title="Criar Tarefa">add</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables"  class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Tipo de Solicitação")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Responsavél")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data de Abertura")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Data da Encerramento")
                                        </th>

                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoSolicitacao.Titulo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pessoas.NomeCompleto.Split(' ')[0])
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status.Descricao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataAbertura)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataEncerramento)
                                            </td>

                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="@Url.Action("DetalhesTarefa", "Tarefa", new { TarefaId = item.TarefaId})">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarTarefa", "Tarefa", new { TarefaId = item.TarefaId})">Editar</a>
                                                            <a class="dropdown-item" href="@Url.Action("DeletarTarefa", "Tarefa", new { TarefaId = item.TarefaId})">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

