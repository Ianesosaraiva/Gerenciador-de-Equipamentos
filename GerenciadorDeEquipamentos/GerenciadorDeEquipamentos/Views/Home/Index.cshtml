<script>
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChartLine);

    // google.load("visualization", "1", { packages: ["corechart"] });

    var chartDataLine;

    $(document).ready(function () {

        $.ajax({
            url: "GetLineChartData",
            data: "",
            dataType: "json",
            type: "POST",
            contentType: "application/json; chartset=utf-8",
            success: function (data) {
                console.log(data);
                chartDataLine = data;
            },
            error: function (data) {
                console.log(data);
                alert("Erro carregando dados! Por favor tente novamente.")
            }
        }).done(function () {
            drawChartLine();
        });
    });


    function drawChartLine() {

        var data = new google.visualization.arrayToDataTable(chartDataLine);

        var options = {
            //chartArea: {
            //    width: 200
            //},
            hAxis: {
                title: 'Meses'
            },
            vAxis: {
                title: 'Quantidade'
            },
            title: "",
            pointSize: 5
        };

        //var lineChart = new google.charts.Line(document.getElementById('lineChart'));
        var lineChart = new google.visualization.LineChart(document.getElementById('lineChart'));

        lineChart.draw(data, options);
    }
</script>

