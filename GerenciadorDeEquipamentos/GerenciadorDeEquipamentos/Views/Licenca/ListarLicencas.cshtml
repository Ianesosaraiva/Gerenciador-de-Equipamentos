@model IEnumerable<GerenciadorDeEquipamentos.Models.Licencas>
@{
    ViewBag.Title = "Listar Licenças";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4 class="card-title">Lista de Licenças</h4>
                                <p></p>
                            </div>
                            <div class="col-sm">
                                <a href="@Url.Action("CriarLicenca")">
                                    <i class="material-icons" style="padding-top: 12px;" title="Criar Licenças">add</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables" class="table table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Nome")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Software")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Quantidade")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Preço")
                                        </th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Softwares.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantidade)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Preco)
                                            </td>
                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="@Url.Action("EditarLicenca", "Licenca", new { SoftwareId = item.SoftwareId})">Editar</a>
                                                            <a class="dropdown-item" href="@Url.Action("DeletarLicenca", "Licenca", new { LicencaId = item.LicencaId})">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

