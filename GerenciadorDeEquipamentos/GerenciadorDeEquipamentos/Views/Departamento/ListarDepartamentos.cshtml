@model IEnumerable<GerenciadorDeEquipamentos.Models.Departamentos>

@{
    ViewBag.Title = "ListarDepartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title mt-0"> Lista de Departamentos</h4>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="text-primary">
                <th>
                    @Html.DisplayName("Nome do Departamento")
                </th>
                <th>
                    @Html.DisplayName("Descrição")
                </th>
                <th>Ações</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>

                            <td>
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="material-icons">more_vert</i>
                                            <p class="d-lg-none d-md-block">
                                                Mais Ações
                                            </p>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                            <a class="dropdown-item" href="#">Visualizar Mais</a>
                                            <a class="dropdown-item" href="@Url.Action("EditarDepartamento", "Departamento", new { PessoaId = item.DepartamentoId})">Editar</a>
                                            <a class="dropdown-item" href="@Url.Action("ExcluirDepartamento", "Departamento")">Excluir</a>
                                        </div>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>