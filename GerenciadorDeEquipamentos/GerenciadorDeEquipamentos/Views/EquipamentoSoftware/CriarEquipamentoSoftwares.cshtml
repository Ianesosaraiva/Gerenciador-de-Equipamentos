@model GerenciadorDeEquipamentos.Models.Softwares

@{
    ViewBag.Title = "CriarEquipamentoSoftwares";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var softwares = ViewBag.softwares;
    string message = ViewBag.message as string;
    var EquipamentoId = ViewBag.EquipamentoId;
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4 class="card-title">Softwares do Equipamento</h4>
                                <p class="card-category">Preencha os campos corretamente!</p>
                            </div>
                            <div class="col-sm">
                                <a>
                                    <i class="material-icons" style="padding-top: 12px;" title="Listar Equipamentos">list</i>
                                </a>
                                <a>
                                    <i class="material-icons" style="padding-top: 12px;">person</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        @if (message != null)
                        {
                            <h5 class="my-3 mb-2" style="color: red" align="center">@message</h5>
                        }

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row form-group">
                                @foreach (var item in softwares)
                                {
                                    <div class="col-sm-4 mt-2">
                                        <p style="font-weight:bold">
                                            @item.Nome
                                            <input class="form-check-inline" type="checkbox" name=mybox[] value="@item.Nome" />
                                        </p>
                                    </div>
                                }
                            </div>
                            <div class="form-group ml-2 mt-3">
                                <a href="@Url.Action("CriarEquipamentoEspecificacoes", "EquipamentoEspecificacao", new { EquipamentoId = EquipamentoId})" class="btn btn-primary">Voltar</a>
                                <input type="submit" id="criar" value="Create" class="btn btn-primary" />
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
