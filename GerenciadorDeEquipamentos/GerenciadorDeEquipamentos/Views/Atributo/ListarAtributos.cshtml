@model IEnumerable<GerenciadorDeEquipamentos.Models.Atributos>

@{
    ViewBag.Title = "Listar Atributos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title mt-0"> Lista de Atributos</h4>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatables" class="table table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Nome")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Descrição")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Tipo de Equipamento")
                                        </th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descricao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoEquipamento.Nome)
                                            </td>
                                            <td>
                                                <ul class="navbar-nav">
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                            <p class="d-lg-none d-md-block">
                                                                Mais Ações
                                                            </p>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                                            <a class="dropdown-item" href="@Url.Action("DetalhesAtributo", "Atributo", new { Atributo = item.AtributoId})">Visualizar Mais</a>
                                                            <a class="dropdown-item" href="@Url.Action("EditarAtributo", "Atributo", new { AtributoId = item.AtributoId})">Editar</a>
                                                            <a class="dropdown-item" href="@Url.Action("DeletarAtributo", "Atributo", new { AtributoId = item.AtributoId})">Excluir</a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

